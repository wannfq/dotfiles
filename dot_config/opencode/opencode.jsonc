{
  "$schema": "https://opencode.ai/config.json",
  "tools": {
    "skills*": false
  },
  "mcp": {
    "sequential-thinking": {
      "enabled": true,
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-sequential-thinking"
      ]
    },
    "github": {
      "enabled": false,
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp",
      "headers": {
        "Authorization": "Bearer {env:GITHUB_TOKEN}"
      }
    },
    "datadog": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.datadoghq.com/api/unstable/mcp-server/mcp",
      "headers": {
        "DD_API_KEY": "{env:DD_API_KEY}",
        "DD_APPLICATION_KEY": "{env:DD_APP_KEY}"
      }
    },
    "pagerduty": {
      "enabled": false,
      "type": "remote",
      "url": "https://mcp.pagerduty.com/mcp",
      "headers": {
        "Authorization": "Token {env:PAGERDUTY_TOKEN}"
      }
    }
  },
  "plugin": ["opencode-skills", "@tarquinen/opencode-dcp@latest"]
}
